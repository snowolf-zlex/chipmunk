<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.snowolf.chipmunk.dao.UserDao">
	<resultMap
		id="UserMap"
		type="org.snowolf.chipmunk.domain.User"
	>
		<id
			column="id"
			property="id"
			jdbcType="BIGINT" />
		<result
			column="username"
			property="username"
			jdbcType="VARCHAR" />
		<result
				column="password"
				property="password"
				jdbcType="VARCHAR" />
		<result
				column="isAccountNonExpired"
				property="isAccountNonExpired"
				jdbcType="VARCHAR" />
		<result
				column="isAccountNonLocked"
				property="isAccountNonLocked"
				jdbcType="VARCHAR" />
		<result
				column="isCredentialsNonExpired"
				property="isCredentialsNonExpired"
				jdbcType="VARCHAR" />
		<result
				column="isEnabled
				isEnabled"
				jdbcType="VARCHAR" />
	</resultMap>
	<select
			id="read"
			resultMap="UserMap">
		<![CDATA[select * from user where id = #{id}]]>
	</select>
	<select
			id="readByUsername"
			resultMap="UserMap">
		<![CDATA[select * from user where username = #{username}]]>
	</select>
	<insert
		id="create"
		parameterType="org.snowolf.chipmunk.domain.User"
	><![CDATA[insert into 
		user (
			name, 
			password,
			isAccountNonExpired,
			isAccountNonLocked,
			isCredentialsNonExpired,
			isEnabled
		) 
		values (
			#{name},
			#{password},
			#{isAccountNonExpired},
			#{isAccountNonLocked},
			#{isCredentialsNonExpired},
			#{isEnabled}
		)
		]]></insert>
	<delete
		id="delete"
		parameterType="java.lang.Long"
	> <![CDATA[delete from user where id = #{id}]]>
	</delete>
	<update
		id="updateStatus"
		parameterType="org.snowolf.chipmunk.domain.User"
	>
	<![CDATA[update into user
		set 
			isAccountNonExpired = #{isAccountNonExpired},
			isAccountNonLocked = #{isAccountNonLocked},
			isCredentialsNonExpired = #{isCredentialsNonExpired},
			isEnabled = #{isEnabled}
		where id = #{id}
	]]>
	</update>
	<update
			id="updatePassword"
			parameterType="org.snowolf.chipmunk.domain.User"
	>
		<![CDATA[update into user
		set
			password = #{password}
		where id = #{id}
	]]>
	</update>
</mapper>